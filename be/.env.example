# Application Settings
DEBUG=True

# Database
DATABASE_URL=sqlite:///./orbi.db

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Speaker Recognition Thresholds
SPEAKER_SIMILARITY_THRESHOLD=0.85
NEW_SPEAKER_THRESHOLD=0.70

# Model Selection
WHISPER_MODEL=base
DIARIZATION_MODEL=pyannote/speaker-diarization-3.1
SPEAKER_EMBEDDING_MODEL=pyannote/wespeaker-voxceleb-resnet34-LM

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini

# API Keys (REQUIRED)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
HF_TOKEN=your_huggingface_token_here

# Optional: Use Anthropic Claude instead
# LLM_PROVIDER=anthropic
# LLM_MODEL=claude-3-5-sonnet-20241022
