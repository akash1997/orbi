# Application Settings
DEBUG=True

# Database
DATABASE_URL=sqlite:///./orbi.db

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Speaker Recognition Thresholds
SPEAKER_SIMILARITY_THRESHOLD=0.85
NEW_SPEAKER_THRESHOLD=0.70

# Audio Processing Pipeline
AUDIO_PIPELINE=gemini
# Options:
#   - traditional: Uses pyannote (diarization) + Whisper (transcription) + LLM (insights)
#                  Requires: HF_TOKEN
#   - gemini: Uses only Gemini API for entire pipeline (diarization, transcription, insights)
#             Requires: GEMINI_API_KEY
#             More cost-effective for small-medium files, simpler setup

# Gemini Audio Model (only used when AUDIO_PIPELINE=gemini)
GEMINI_AUDIO_MODEL=gemini-2.5-lite
# IMPORTANT: Only Pro models support audio files
# Options:
#   - gemini-1.5-pro (recommended)
#   - gemini-1.5-pro-002 (latest version)
# Note: gemini-1.5-flash does NOT support audio files

# Model Selection (for traditional pipeline)
WHISPER_MODEL=base
DIARIZATION_MODEL=pyannote/speaker-diarization-3.1
SPEAKER_EMBEDDING_MODEL=pyannote/wespeaker-voxceleb-resnet34-LM

# LLM Configuration (Default for all pipelines)
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-4o-mini

# Optional: Use Google Gemini instead
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.5-flash
# or for more capable model:
# LLM_MODEL=gemini-1.5-pro

# API Keys (REQUIRED)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GEMINI_API_KEY=your_gemini_key_here
HF_TOKEN=your_huggingface_token_here

# Optional: Use Anthropic Claude instead
# LLM_PROVIDER=anthropic
# LLM_MODEL=claude-3-5-sonnet-20241022


# Optional: Pipeline-Specific LLM Configuration
# Override LLM settings for specific pipelines (leave empty to use defaults above)

# Conversation Insights Pipeline (summary, action items, sentiment analysis)
# CONVERSATION_LLM_PROVIDER=gemini
# CONVERSATION_LLM_MODEL=gemini-1.5-flash

# Speaker Insights Pipeline (speaking style, communication feedback)
# SPEAKER_LLM_PROVIDER=openai
# SPEAKER_LLM_MODEL=gpt-4o-mini
